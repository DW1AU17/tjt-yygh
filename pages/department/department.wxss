page {
  height: 100%;
  color:#333;
}
.content {
  width: 100%;
  height: 100%;
  display: flex;
  padding-top: 70rpx;
  box-sizing: border-box;
}
.left-department, .right-doctor {
  height: 100%;
}
.scroll-view-item {
  height: 120rpx;
  line-height: 120rpx;
}
/* 头部搜索部分 */
.search {
  height: 70rpx;
  width: 100%;
  position: fixed;
  top: 0;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-items: center;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.search input {
  width: 100%;
  height: 80%;
  min-height: 0;
  background-color: #fff;
  border-radius: 20rpx;
}
.search_icon {
  position: absolute;
  left: 35rpx;
}
.icon-clear {
  left: auto;
  right: 14%;
  z-index: 9999;
}

/* 科室列表 */
.left-department {
  width: 30%;
  background-color: #25bdd5;
  color: #fff;
  font-size: 28rpx;
}
.left-department .scroll-view-item {
  text-align: center;
}
.left-department .scroll-view-item.active {
  background-color: #fff;
  color: #555;
  border-left: 6rpx solid #0072BB;
}
/* 医生列表 */
.right-doctor {
  width: 70%;
  background-color: #fff;
}

/* 搜索模态层 */
.hide {
  display: none;
}
.search-modal {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background-color: #fff;
  padding-top: 70rpx;
}
.search-modal .search {
  z-index: 9999;
  justify-content: space-between;
}
.search-modal .search input {
  width: 90%;
}
.search-modal .search-content {
  padding: 0 30rpx;
  height: 100%;
}
.search-modal .search-content .title {
  font-weight: 700;
  margin-top: 10rpx;
  display: block;
  color: #555;
}
.search-modal .doc-txt {
  width: 80%;
}
.dep-item {
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #eee;
}

