page {
  height: 100%;
  color:#333;
}
.content {
  width: 100%;
  height: 100%;
  display: flex;
}
.left-department, .right-doctor {
  height: 100%;
}
.scroll-view-item {
  height: 100rpx;
  line-height: 100rpx;
}
/* 科室列表 */
.left-department {
  width: 34%;
  background-color: #64BAE2;
  color: #fff;
  font-size: 28rpx;
}
.left-department .scroll-view-item {
  text-align: center;
}
.left-department .scroll-view-item.active {
  background-color: #fff;
  color: #555;
  border-left: 6rpx solid #0072BB;
}
/* 医生列表 */
.right-doctor {
  width: 66%;
  background-color: #fff;
}
.right-doctor .scroll-view-item {
  text-align: left;
  padding-left: 20rpx;
}
.right-doctor text {
  font-size: 24rpx;
}
.doctorNone {
  text-align: center;
  padding-top: 100%;
  font-size: 40rpx;
  color: #888;
}